  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "all": "npm run lint && npm run test:simple && npm t",
    "browser": "hs -c-1 -a localhost src/browser",
    "browser:dev": "browser-sync start --server --cors --watch --no-ui --no-notify --host 127.0.0.0 --serveStatic src/browser",
    "certs": "sh certs/gen.sh",
    "clean": "rm -rf coverage .nyc_output *.tgz",
    "coverage": "c8 -r text -r html --exclude \"**/*.spec.js\" npm t",
    "lint": "eslint --fix --ext .js,.cjs .",
    "test": "mocha ./src",
    "test:simple": "node src/node/testing/mocha.spec.js"
  },
  "mocha": {
    "colors": true,
    "exit": true,
    "extension": [
      ".spec.js"
    ],
    "recursive": true
  },
  "dependencies": {
    "cookie": "^0.5.0",
    "mnemonist": "^0.39.5"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "debug": "^4.3.4",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "mocha": "^10.2.0",
    "sinon": "^17.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14"
  }
}
