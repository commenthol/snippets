  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "all": "npm t && npm run lint",
    "browser": "hs -c-1 -a localhost src/browser",
    "browser:dev": "browser-sync start --server --cors --watch --no-ui --no-notify --host 127.0.0.0 --serveStatic src/browser",
    "certs": "sh certs/gen.sh",
    "clean": "rm -rf coverage .nyc_output *.tgz",
    "coverage": "c8 -r text -r html --exclude \"**/*.spec.js\" npm t",
    "lint": "eslint --fix \"**/*.js\" \"**/*.cjs\"",
    "test": "mocha src/**/*.spec.js"
  },
  "mocha": {
    "colors": true,
    "recursive": true
  },
  "dependencies": {
    "mnemonist": "^0.38.5"
  },
  "devDependencies": {
    "c8": "^7.10.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "mocha": "^9.1.3",
    "sinon": "^12.0.1",
    "supertest": "^6.1.6"
  },
  "engines": {
    "node": ">=14"
  }
}
