  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "all": "npm t && npm run lint",
    "browser": "hs -c-1 -a localhost src/browser",
    "browser:dev": "browser-sync start --server --cors --watch --no-ui --no-notify --host 127.0.0.0 --serveStatic src/browser",
    "certs": "sh certs/gen.sh",
    "clean": "rm -rf coverage .nyc_output *.tgz",
    "coverage": "c8 -r text -r html --exclude \"**/*.spec.js\" npm t",
    "lint": "eslint --fix --ext .js,.cjs .",
    "test": "mocha ./src"
  },
  "mocha": {
    "colors": true,
    "exit": true,
    "extension": [
      ".spec.js"
    ],
    "recursive": true
  },
  "dependencies": {
    "cookie": "^0.5.0",
    "mnemonist": "^0.39.3"
  },
  "devDependencies": {
    "c8": "^7.12.0",
    "debug": "^4.3.4",
    "eslint": "^8.25.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "mocha": "^10.0.0",
    "sinon": "^14.0.1",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=14"
  }
}
